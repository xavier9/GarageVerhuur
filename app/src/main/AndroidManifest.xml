<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ehb.xavier.garageverhuur" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".UserActions.UserAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GarageActions.GarageGetActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts" />
        </activity>
        <activity
            android:name=".GarageActions.GarageEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GarageActions.GarageAddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GarageActions.GarageDetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserActions.UserEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserActions.UserGetActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
